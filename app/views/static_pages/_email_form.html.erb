<form class="password-reset-form" action="/email_activation" accept-charset="UTF-8" method="post">
  <input name="utf8" type="hidden" value="✓">
  <%= tag(:input, :type => "hidden", :name =>
      request_forgery_protection_token.to_s, :value =>
              form_authenticity_token) %>

  <% if @current_user.email.nil? %>
    <p>您尚未绑定电子邮箱</p>
  <% else %>
    <label for="user_email">电子邮箱</label>
    <p class="form-control-static" id="user_email"><%= @current_user.email %></p>
  <% end %>

  <label for="user_new_email">绑定新邮箱</label>
  <input class="form-control" type="email" name="new_email" id="user_new_email">

  <input type="submit" name="commit" value="绑定新邮箱" class="btn btn-primary">
</form>

<style>

  .password-reset-form, input {
    margin: 10px 0;
  }

  .form-control-static {
      margin: 20px 0 !important;
  }
</style>